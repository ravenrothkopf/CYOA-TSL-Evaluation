initially assume{  
    ! getCave;
    ! getTown;
    ! safeThreshold;
}

always assume {
    [passageTarget <- toCave] <-> X getCave;
    [passageTarget <- toTown] -> F getTown;
    [safeCount <- safeCount + 1] -> F safeThreshold;
}

guarantee {
    (! (getCave)) W (getTown);
    (safeThreshold && getCave) -> X getTown;
}

always guarantee {
     (safe && getCave) <-> [safeCount <- safeCount + 1];
     F getCave;
     F getTown;
}